{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    // sources
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
  },
  "rootDir": "./src",
  "include": ["src/**/*.ts"],
  "exclude": [
    "tests",
    "dist",
    "node_modules",
    "script",
  ]
}